                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:id="@+id/branch_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_grid"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:text="Choose your nearest Cafe' Whisk branch and explore our wide range of delicious coffee, cakes, and snacks. Enjoy your favorite meals in a cozy environment or order online for quick delivery."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />
</RelativeLayout>
